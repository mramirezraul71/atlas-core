# ==================================================
# ATLAS NEXUS - Environment Configuration
# Copy this file to .env and fill in your values
# ==================================================

# ===================
# SYSTEM CONFIGURATION
# ===================
ATLAS_ROOT=C:/ATLAS
ATLAS_MODE=autonomous
ATLAS_AUTONOMY=HIGH
ATLAS_APPROVAL_MODE=telegram
ATLAS_LOG_LEVEL=INFO
ATLAS_MAX_RETRIES=3
ATLAS_TIMEOUT=300
ATLAS_LANGUAGE=es
ATLAS_TIMEZONE=America/New_York

# ===================
# API KEYS
# ===================

# Anthropic (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenAI (GPT)
OPENAI_API_KEY=your-openai-api-key-here

# Google (optional)
GOOGLE_API_KEY=your-google-api-key-here

# ===================
# TELEGRAM
# ===================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_OWNER_ID=your-telegram-user-id-here

# ===================
# API SERVER
# ===================
ATLAS_API_KEY=your-secure-api-key-here
ATLAS_API_HOST=0.0.0.0
ATLAS_API_PORT=8000

# ===================
# OLLAMA (Local LLMs)
# ===================
OLLAMA_BASE_URL=http://localhost:11434

# ===================
# FEATURES
# ===================
ATLAS_ENABLE_VOICE=false
ATLAS_ENABLE_GUI=true
ATLAS_ENABLE_TELEGRAM=true
ATLAS_ENABLE_API=true

# ===================
# ADVANCED
# ===================
# Database connection (optional)
# DATABASE_URL=sqlite:///atlas_nexus.db

# Redis for caching (optional)
# REDIS_URL=redis://localhost:6379

# Sentry for error tracking (optional)
# SENTRY_DSN=your-sentry-dsn-here
